<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F7CA0"
    android:orientation="vertical" >

    <!-- Player Header -->


    <LinearLayout
        android:id="@+id/player_header_bg"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true"
        android:background="@color/yellow"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <!-- Song Title -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:id="@+id/imageView7"
            android:src="@drawable/img_btn_love" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:id="@+id/imageView5"
            android:src="@drawable/img_btn_chat" />

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />
        "

        <!-- Playlist button -->

        <ImageButton
            android:id="@+id/btnPlaylist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:onClick="musicInfo"
            android:src="@drawable/btn_playlist" />

    </LinearLayout>

    <!-- Song Thumbnail Image -->

    <LinearLayout
        android:id="@+id/songThumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_header_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- Player Footer -->

    <!-- Progress Bar/Seek bar -->


    <!-- Timer Display -->

    <!-- Repeat / Shuffle buttons -->

    <SeekBar
        android:id="@+id/songProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timerDisplay"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:progressDrawable="@layout/progress_bar"
        android:thumb="@drawable/seek_handler" />

    <LinearLayout
        android:id="@+id/timerDisplay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/songProgressBar"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/songCurrentDurationLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#FFFFFF"
            android:background="@color/yellow"
            android:textSize="40dp"
            android:textStyle="bold"/>
        <!-- Total Duration Label -->
        <TextView
            android:id="@+id/songTotalDurationLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:background="@color/yellow"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/album_artwork_see"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout><!-- From: file:/C:/Users/yoels/Desktop/SoundersFinal/Core%20Application/app/src/main/res/layout/fragment_speakermusic.xml -->