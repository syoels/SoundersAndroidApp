<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow"
    tools:context=".SpeakerActivity"
    android:weightSum="1">

    <fragment
        android:id="@+id/fragment_speakermusic"
        android:name="com.example.musicsaround.speaker.SpeakerMusicFragment"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_weight="0.98" />

    <fragment
        android:id="@+id/frag_speakers_devices"
        android:name="com.example.musicsaround.speaker.ClientDeviceListFragment"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_weight="0.16" />

    <TextView
        android:id="@+id/txt_speaker_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speaker Time" />

